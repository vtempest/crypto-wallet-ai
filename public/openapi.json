{
  "openapi": "3.1.0",
  "info": {
    "title": "Crypto Wallet AI API",
    "description": "AI Chatbot Agent API for Crypto Wallets with Ethereum integration and MCP tools",
    "version": "2.0.0",
    "contact": {
      "name": "vtempest",
      "url": "https://github.com/vtempest/crypto-wallet-ai"
    },
    "license": {
      "name": "Proprietary",
      "url": "https://rights.institute/prosper"
    }
  },
  "servers": [
    {
      "url": "/api",
      "description": "API Server"
    }
  ],
  "paths": {
    "/chat": {
      "post": {
        "summary": "Chat with AI",
        "description": "Send a message to the AI chatbot with Ethereum wallet context",
        "tags": ["Chat"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["message", "optimizationMode", "chatModel"],
                "properties": {
                  "message": {
                    "type": "object",
                    "required": ["messageId", "chatId", "content"],
                    "properties": {
                      "messageId": { "type": "string" },
                      "chatId": { "type": "string" },
                      "content": { "type": "string" }
                    }
                  },
                  "optimizationMode": {
                    "type": "string",
                    "enum": ["speed", "balanced", "quality"]
                  },
                  "focusMode": {
                    "type": "string",
                    "default": "ethereumWallet"
                  },
                  "history": {
                    "type": "array",
                    "items": {
                      "type": "array",
                      "items": { "type": "string" },
                      "minItems": 2,
                      "maxItems": 2
                    }
                  },
                  "files": {
                    "type": "array",
                    "items": { "type": "string" }
                  },
                  "chatModel": {
                    "type": "object",
                    "required": ["providerId", "key"],
                    "properties": {
                      "providerId": { "type": "string" },
                      "key": { "type": "string" }
                    }
                  },
                  "systemInstructions": {
                    "type": "string",
                    "nullable": true
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Streaming chat response",
            "content": {
              "text/event-stream": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/chats": {
      "get": {
        "summary": "Get user's chats",
        "description": "Retrieve all chats for the authenticated user",
        "tags": ["Chats"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "List of chats",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "chats": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Chat"
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/chats/{id}": {
      "get": {
        "summary": "Get chat by ID",
        "description": "Retrieve a specific chat with its messages",
        "tags": ["Chats"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Chat details",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Chat"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Delete chat",
        "description": "Delete a specific chat",
        "tags": ["Chats"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Chat deleted successfully"
          }
        }
      }
    },
    "/wallet/info": {
      "get": {
        "summary": "Get wallet info",
        "description": "Get the user's primary wallet address and chain information",
        "tags": ["Wallet"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Wallet information",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "address": { "type": "string" },
                    "chainId": { "type": "number" },
                    "wallets": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "address": { "type": "string" },
                          "chainId": { "type": "number" },
                          "isPrimary": { "type": "boolean" }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "No wallet found"
          }
        }
      }
    },
    "/providers": {
      "get": {
        "summary": "Get AI providers",
        "description": "List all available AI model providers",
