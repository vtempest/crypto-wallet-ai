    "/providers/{id}": {
      "get": {
        "summary": "Get provider by ID",
        "description": "Get details of a specific AI provider",
        "tags": ["Providers"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Provider details"
